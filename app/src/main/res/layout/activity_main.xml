<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food_image"
    tools:context=".MainActivity">
<!-- aaronswomy. (n.d.). Food Desktop Wallpaper [Review of Food Desktop Wallpaper]. Retrieved March 25, 2025, from https://wallpapercave.com/w/q4TlMC1â€Œ -->

    <EditText
        android:id="@+id/timeInput"
        android:layout_width="339dp"
        android:layout_height="90dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="608dp"
        android:backgroundTint="#FFEB3B"
        android:ems="10"
        android:hint="Enter time of day"
        android:inputType="text"
        android:textColor="#FFEB3B"
        android:textColorHint="#FFEB3B"
        android:textColorLink="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mealSuggestion"
        android:layout_width="324dp"
        android:layout_height="177dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="241dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="313dp"
        android:text="Suggestion"
        android:textColor="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/suggestButton"
        android:layout_width="237dp"
        android:layout_height="60dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="467dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="204dp"
        android:backgroundTint="#3F51B5"
        android:text="Suggest Button"
        android:textColor="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.558" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="228dp"
        android:layout_height="66dp"
        android:layout_marginStart="98dp"
        android:layout_marginTop="630dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#3F51B5"
        android:text="Reset"
        android:textColor="#FF5722"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>